{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "build",
    "strict": true,
    "isolatedModules": true,
    "types": [
      "jest"
    ],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "test",
    "node_modules",
    "build"
  ],
  "include": [
    "src",
    "test"
  ]
}