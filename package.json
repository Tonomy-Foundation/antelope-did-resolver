{
  "name": "@tonomy/antelope-did-resolver",
  "author": "Jack Tanner <jack+public@tonomy.foundation>",
  "version": "0.4.0",
  "license": "Apache-2.0",
  "description": "Resolve Decentralized Identifier (DID) documents based on Antelope blockchains",
  "keywords": [
    "antelope",
    "did",
    "ssi",
    "resolver"
  ],
  "type": "module",
  "source": "src/index.ts",
  "main": "./build/index.cjs",
  "module": "./build/index.module.js",
  "types": "./build/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./build/types/index.d.ts",
      "require": "./build/index.cjs",
      "import": "./build/index.module.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Tonomy-Foundation/antelope-did-resolver"
  },
  "files": [
    "build",
    "src",
    "antelope-did-chain-registry.json",
    "LICENSE"
  ],
  "scripts": {
    "start": "microbundle watch",
    "build": "microbundle --compress=false",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "lint": "eslint src test --ext .ts --resolve-plugins-relative-to .",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "npm run build",
    "release": "semantic-release --debug"
  },
  "contributors": [
    "Jack Tanner <jack+public@tonomy.foundation>",
    "Rebal Alhaqash <rebal@tonomy.foundation>"
  ],
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/preset-env": "^7.21.5",
    "@babel/preset-typescript": "^7.21.5",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/elliptic": "^6.4.14",
    "@types/jest": "^29.5.2",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.5.0",
    "microbundle": "^0.15.1",
    "prettier": "^2.8.8",
    "semantic-release": "^21.0.2",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "tslib": "^2.5.3",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@greymass/eosio": "^0.7.0",
    "@tonomy/did-resolver": "^4.0.4",
    "cross-fetch": "^3.1.6",
    "uint8arrays": "^4.0.3"
  }
}
